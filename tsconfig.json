{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@near/*": ["components/protocols/near/*"],
      "@polka/*": ["components/protocols/polkadot/*"],
      "@solana/*": ["components/protocols/solana/*"],
      "@ccelo/*": ["components/protocols/celo/*"],
      "@tezos/*": ["components/protocols/tezos/*"],
      "@avalanche/*": ["components/protocols/avalanche/*"],
      "@secret/*": ["components/protocols/secret/*"],
      "@polygon/*": ["components/protocols/polygon/*"],
      "@funnel/*": ["utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js"],
  "exclude": ["node_modules"]
}
